<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemTipoCombustible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <!-- TextView para mostrar el nombre del tipo de combustible -->
    <TextView
        android:id="@+id/tvTipoCombustible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tipo de Combustible"
        android:textSize="16sp"
        android:layout_marginEnd="8dp"
        android:padding="8dp" />

    <!-- TextView para mostrar la cantidad de bombas -->
    <TextView
        android:id="@+id/tvCantidadBombas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Cantidad de Bombas"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:padding="8dp" />
</LinearLayout>
